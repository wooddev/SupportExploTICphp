{# empty Twig template #}
<link href="{{asset('bundles/exploticadmin/css/user.css')}}" type="text/css" rel="stylesheet"/>
{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
        <form class="form-signin form-horizontal" style="max-width:310px;" action="{{ path("fos_user_security_check") }}" method="post">
            <div class="top-bar">
            <h3><i class="icon-exchange"></i> Connexion</h3>
            </div>
                
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            
            <div class="well no-padding">
                
                <div class="control-group">                    
                    <label class="control-label" for="username"><i class="icon-user"></i></label>
                    <div class="controls">
                         <input type="text" id="username" name="_username" placeholder="{{ 'security.login.username'|trans }}" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                    
                <div class="control-group">
                    <label class="control-label" for="password"><i class="icon-key"></i></label>
                    <div class="controls">
                        <input type="password" id="password" placeholder="{{ 'security.login.password'|trans }}" name="_password" required="required" />
                        
                        <label class="checkbox" for="remember_me">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
                        </label>
                    </div>
                </div>
             
               
                <div class="padding">
                    <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                    <a class="btn" href="{{path('fos_user_resetting_request')}}">Mot de passe oubli√©</a>
                </div>
            </div>            
        </form>          
