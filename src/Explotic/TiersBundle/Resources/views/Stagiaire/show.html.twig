{%extends "ExploticTiersBundle::layout.html.twig" %}

{% block body %} 
<h1>Stagiaire</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ entity.prenom }}</td>
        </tr>
        <tr>
            <th>Datenaissance</th>
            <td>{{ entity.dateNaissance|date('Y-m-d H:i:s') }}</td>
