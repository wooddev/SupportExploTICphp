        <tr>
            <th>Marchepiedinfo</th>
            <td>{{ entity.marchePiedInfo }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ entity.telephone }}</td>
        </tr>
        <tr>
            <th>Opca</th>
            <td>{{ entity.opca }}</td>
        </tr>
        <tr>
            <th>Entreprise</th>
            <td>{{ entity.entreprise }}</td>
