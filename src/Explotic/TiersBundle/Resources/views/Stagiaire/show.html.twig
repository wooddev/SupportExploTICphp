    <li>
        <a href="{{ path('programme_new', { 'idStg': entity.id }) }}">Ajouter Programme</a>
    </li>
    <li>
        <a href="{{ path('stagiaire') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('stagiaire_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('stagiaire_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock%}