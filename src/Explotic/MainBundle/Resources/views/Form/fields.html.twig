
{# src/Explotic/MainBundle/Resources/views/Form/fields.html.twig #}
 
{% block gmaps_picker_widget %}</pre>
<div id="gmaps_picker_widget">
<div id="input">{{ block('form_widget') }}</div>
<div id="map_canvas"></div>
</div>

<script type="text/javascript">

$(function(){
    $('#map_canvas').width("400px").height("400px").gmap3({
            map:{
                options:{
                    center:[44.32, -0.648],
                    zoom:7,
                    mapTypeId: google.maps.MapTypeId.ROADMAP,
                    mapTypeControl: true,
                    mapTypeControlOptions: {
                    style: google.maps.MapTypeControlStyle.DROPDOWN_MENU
                    },
                    navigationControl: true,
                    scrollwheel: true,
                    streetViewControl: true
                },
                
                events:{                    
                    click:function(map, event){
                                    $(this).gmap3(
                                        {clear:{last:true}});    
                                    $(this).gmap3(
                                        { marker:{
                                            latLng: event.latLng
                                          }
                                        }

                                      );
                                    // Fonction Jquery qui va remplir les balises lat et lon du formulaire !!!!!
                                    $('#{{form.lat.vars.id}}').val(event.latLng.lat());
                                    $('#{{form.lon.vars.id}}').val(event.latLng.lng());
                                    }
                    
                }
            },
            marker:{
            {%if form.lat.vars.value is defined and form.lon.vars.value is defined%}
               latLng: [{{form.lat.vars.value}}, {{form.lon.vars.value}}]
            {%endif%}
            }
    });
});
</script>

{% endblock %}

{% block gmaps_address_picker_widget %}</pre>
<div id="{{ id }}_gmaps_address_picker_widget">
    <div id="address_picker">        
        <div id="{{ id }}_input">{{ block('form_widget') }}</div>
        <div id="{{ id }}_map" class="gmaps_address_picker_map" style="width:800px; height:400px"></div>
    </div>       
</div>
<link rel="stylesheet" href="{{asset('bundles/exploticmain/css/jquery.ui.all.css')}}">
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB4hT13IYCchS-xzh54W5_fUZv8kad8GOo&sensor=false"></script>
<script type="text/javascript" src="{{asset('bundles/exploticmain/js/jquery-1.4.4.min.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/exploticmain/js/jquery-ui-1.8.7.min.js')}}"></script>
<script type="text/javascript" src="{{asset('bundles/exploticmain/js/jquery.ui.addresspicker.js')}}"></script>

<script type="text/javascript">
$(function() {
            var addresspickerMap = $("#{{ form.address.vars.id }}").addresspicker({
                regionBias: "fr",
                elements: {
                    map: "#{{ id }}_map",
                    locality: '#{{ form.city.vars.id }}',
                    postal_code: '#{{form.postalCode.vars.id }}',                                    
                    lat:      "#{{ form.lat.vars.id }}",
                    lng:      "#{{ form.lon.vars.id }}"
                }
            });
            var gmarker = addresspickerMap.addresspicker("marker");
            gmarker.setVisible(true);
            addresspickerMap.addresspicker("updatePosition");
    });
</script>
{% endblock %}