<html lang="fr">
    <head>
        <title>Transfer Démo</title>
    <!-- Bootstrap -->
    {% include 'BraincraftedBootstrapBundle::_stylesheets.html.twig' %}
    
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="span3">
                        <h2>Menu </h2>

                        {% if is_granted("ROLE_DAB") %}
                        <ul> Gestion du site
                            <li><a href="{{path('typeposte')}}">  Gestion des postes de déchargement </a>
                            </li>
                            <li><a href="{{path('transporteur')}}">  Gestion des transporteurs </a>
                            </li>                            
                            <li><a href="{{path('agenttrsp')}}">  Gestion des agents des transporteurs </a>
