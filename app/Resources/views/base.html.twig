                            <li><a href="{{path('creneaupref_showtransporteur', {'idTransporteur': 1})}}"> creneaux préférentiels du transporteur 1 </a>
                            </li>
                        </ul>
                        
                        <ul> Gestion des créneaux pour la recherche de rendez-vous
                            <li><a href="{{path('creneaurdv')}}"> liste créneaux rdv </a>
                            </li>
                            <li><a href="{{path('creneaurdvgen_generate')}}"> génération des créneaux rdv pour une semaine </a>
                            </li>
                        </ul>
                        {%elseif is_granted('ROLE_USER')%}
